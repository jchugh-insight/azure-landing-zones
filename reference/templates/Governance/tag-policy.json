{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "targetMG": {
            "type": "string"
        },
        "tag1": {
            "type": "string",
            "defaultValue": "applicationName"
        },
        "tag2": {
            "type": "string",
            "defaultValue": "owner"
        },
        "tag3": {
            "type": "string",
            "defaultValue": "businessCriticality"
        },
        "tag4": {
            "type": "string",
            "defaultValue": "ownerEmail"
        },
        "tag5": {
            "type": "string",
            "defaultValue": "costCenter"
        },
        "tag6": {
            "type": "string",
            "defaultValue": "dataClassification"
        }
    },
    "variables": {
        "inheritTag": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
        "requireTag": "/providers/Microsoft.Authorization/policyDefinitions/96670d01-0a4d-4649-9c89-2d3abc0a5025",
        "policyAssignmentName": "[concat('Required-Tags-', parameters('targetMG'))]",
        "mgScope": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('targetMG'))]",
        "location": "eastus",
        "policySetName": "Azure-Governance",
        "apiVersions": {
            "policySetDefinitions": "2018-05-01",
            "policyAssignments": "2020-03-01"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "name": "[variables('policySetName')]",
            "apiVersion": "[variables('apiVersions').policySetDefinitions]",
            "properties": {
                "displayName": "[variables('policySetName')]",
                "description": "This initiative enforces resource group tagging, tag inheritence, allowed locations and Azure hybrid use benefits.",
                "metadata": {
                    "category": "Tags"
                },
                "parameters": {},
                "policyDefinitions": [
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('requireTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('inheritTag')]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignmentName')]",
            "dependsOn": [ "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]" ],
            "location": "[variables('location')]",
            "properties": {
                "description": "[variables('policyAssignmentName')]",
                "displayName": "[variables('policyAssignmentName')]",
                "policyDefinitionId": "[extensionResourceId(variables('mgScope'), 'Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]",
                "notScopes": []
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {
        "policyId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]"
        }
    }
}