{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "targetMG": {
            "type": "string"
        },
        "tag1": {
            "type": "string",
            "defaultValue": "Application Name"
        },
        "tag2": {
            "type": "string",
            "defaultValue": "Application Owner"
        },
        "tag3": {
            "type": "string",
            "defaultValue": "Criticality"
        },
        "tag4": {
            "type": "string",
            "defaultValue": "Contact Email"
        },
        "tag5": {
            "type": "string",
            "defaultValue": "Cost Center"
        },
        "tag6": {
            "type": "string",
            "defaultValue": "Data Classification"
        },
        "listOfAllowedLocations": {
            "type": "array",
            "defaultvalue": [
                "australiaeast",
                "australiasoutheast"
            ]
        }
    },
    "variables": {
        "policyDefinitions": {
            "allowedAzRegions": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
            "allowedAzRegionsRg": "/providers/Microsoft.Authorization/policyDefinitions/e765b5de-1225-4ba3-bd56-1ac6695af988",
            "inheritTag": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
            "requireTag": "/providers/Microsoft.Authorization/policyDefinitions/96670d01-0a4d-4649-9c89-2d3abc0a5025"
        },
        "policyAssignment": {
            "name": "Azure-Governance-Initiative",
            "displayName": "Azure Governance Initiative"
        },
        "scope": {
            "managementGroup": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('targetMG'))]"
        },
        "policySet": {
            "name": "Azure-Governance-Initiative",
            "displayName": "Azure Governance Initiative"
        },
        "apiVersions": {
            "policySetDefinitions": "2018-05-01",
            "policyAssignments": "2020-03-01"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "name": "[variables('policySet').name]",
            "apiVersion": "[variables('apiVersions').policySetDefinitions]",
            "properties": {
                "displayName": "[variables('policySet').displayName]",
                "description": "This Azure Governance initiative enforces resource group tagging, tag inheritence, allowed locations and other governance controls across the environment.",
                "metadata": {
                    "category": "Governance"
                },
                "parameters": {},
                "policyDefinitions": [
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').allowedAzRegions]",
                        "parameters": {
                            "listOfAllowedLocations": {
                                "value": "[parameters('listOfAllowedLocations')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').allowedAzRegionsRg]",
                        "parameters": {
                            "listOfAllowedLocations": {
                                "value": "[parameters('listOfAllowedLocations')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignment').name]",
            "dependsOn": [ "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySet').name)]" ],
            "location": "[deployment().location]",
            "properties": {
                "description": "This Azure Governance initiative enforces resource group tagging, tag inheritence, allowed locations and other governance controls across the environment.",
                "displayName": "[variables('policyAssignment').displayName]",
                "policyDefinitionId": "[extensionResourceId(variables('scope').managementGroup, 'Microsoft.Authorization/policySetDefinitions', variables('policySet').name)]",
                "notScopes": []
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {
        "policyId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySet').Name)]"
        }
    }
}
