{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "companyPrefix": {
      "type": "string",
      "maxLength": 5
    }
  },
  "variables": {
    "scope": {
      "topLevel": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('companyPrefix'))]"
    },
    "roleDefName": "[guid(deployment().name, variables('scope').topLevel)]",
    "roleName": "Network Management",
    "roleDescription": "Platform-wide global connectivity management: Virtual networks, UDRs, NSGs, NVAs, VPN, Azure ExpressRoute, and others.",
    "actions": [
      "*/read",
      "Microsoft.Network/vpnGateways/*",
      "Microsoft.Network/expressRouteCircuits/*",
      "Microsoft.Network/routeTables/write",
      "Microsoft.Network/vpnSites/*"
    ],
    "apiVersions": {
      "roleDefinitions": "2018-07-01"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleDefinitions",
      "apiVersion": "[variables('apiVersions').roleDefinitions]",
      "name": "[variables('roleDefName')]",
      "properties": {
        "roleName": "[variables('roleName')]",
        "description": "[variables('roleDescription')]",
        "type": "customRole",
        "isCustom": true,
        "permissions": [
          {
            "actions": "[variables('actions')]",
            "notActions": []
          }
        ],
        "assignableScopes": [
          "[concat('/providers/Microsoft.Management/managementGroups/', variables('scope').topLevel)]"
        ]
      }
    }
  ]
}