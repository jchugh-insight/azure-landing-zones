{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "paasPrivateDnsZoneName": {
      "type": "String"
    },
    "virtualNetworkLinkResourceId": {
      "type": "String"
    },
    "virtualNetworkName": {
      "type": "String"
    }
  },
  "variables": {
    "virtualNetworkLinkName": "[concat('FROM-', parameters('paasPrivateDnsZoneName'),'-TO-', parameters('virtualNetworkName'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2018-09-01",
      "name": "[parameters('paasPrivateDnsZoneName')]",
      "location": "global",
      "tags": {
        "CostCentre": "1631 WBS- STA-OPS-XXX.01.17492"
      },
      "properties": {}
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2018-09-01",
      "name": "[concat(parameters('paasPrivateDnsZoneName'),'/',variables('virtualNetworkLinkName'))]",
      "location": "global",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones', parameters('paasPrivateDnsZoneName'))]"
      ],
      "tags": {
        "CostCentre": "1631 WBS- STA-OPS-XXX.01.17492"
      },
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": {
          "id": "[parameters('virtualNetworkLinkResourceId')]"
        }
      }
    }

  ]
}