{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "enableIdentitySpoke": {
      "type": "string",
      "defaultValue": "Yes",
      "allowedValues": [
        "Yes",
        "No"
      ]
    },
    "location": {
      "type": "string",
      "metadata": {
        "displayName": "location",
        "description": "Location of the HUB"
      },
      "defaultValue": "[deployment().location]"
    },
    "identitySubscriptionId": {
      "type": "string",
      "maxLength": 36,
      "defaultValue": ""
    },
    "networkRg": {
      "type": "string"
    },
    "vnet": {
      "type": "string"
    },
    "vNetPeerUseRemoteGateway": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Use remote gateway or not."
      }
    },
    "hubResourceId": {
      "type": "string",
      "metadata": {
        "description": "Provide the resourceId for the hub."
      }
    },
    "idamVnetResourceId": {
      "type": "string",
      "metadata": {
        "description": "Provide the resourceId for the hub."
      }
    }
  },
  "variables": {
    "spokeToHubPeerName": "[concat(parameters('vnet'), '-to-', parameters('vnet'))]",
    "hubToSpokePeerName": "[concat(parameters('vnet'), '-to-', parameters('vnet'))]",
    "hubVnet": "[split(parameters('hubResourceId'),'/')[8]]"
  },
  "resources": [
    {
      "comments": "Nested deployment for vNet peering (Spoke >> Hub)",
      "condition": "[equals(parameters('enableIdentitySpoke'), 'Yes')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "[take(concat('spokeToHub', '-', guid(deployment().name)), 64)]",
      "subscriptionId": "[parameters('identitySubscriptionId')]",
      "resourceGroup": "[parameters('networkRg')]",
      "dependsOn": [],
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "comments": "Deploy peering (Spoke >> Hub)",
              "condition": "[equals(parameters('enableIdentitySpoke'), 'Yes')]",
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2020-07-01",
              "name": "[concat(parameters('vnet'), '/',variables('spokeToHubPeerName'))]",
              "location": "[parameters('location')]",
              "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": "[parameters('vNetPeerUseRemoteGateway')]",
                "remoteVirtualNetwork": {
                  "id": "[parameters('hubResourceId')]"
                }
              }
            }
          ]
        }
      }
    },
    {
      "comments": "Nested deployment for vNet peering (Hub >> Spoke)",
      "condition": "[equals(parameters('enableIdentitySpoke'), 'Yes')]",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "[take(concat('hubToSpoke', '-', guid(deployment().name)), 64)]",
      "subscriptionId": "[split(parameters('hubResourceId'),'/')[2]]",
      "resourceGroup": "[split(parameters('hubResourceId'),'/')[4]]",
      "properties": {
        "mode": "Incremental",
        "template": {
          "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
          "contentVersion": "1.0.0.0",
          "parameters": {},
          "variables": {},
          "resources": [
            {
              "comments": "Deploy vNet peering (Hub >> Spoke)",
              "condition": "[equals(parameters('enableIdentitySpoke'), 'Yes')]",
              "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
              "apiVersion": "2020-07-01",
              "name": "[concat(variables('hubVnet'), '/',variables('hubToSpokePeerName'))]",
              "location": "[deployment().location]",
              "properties": {
                "allowVirtualNetworkAccess": true,
                "allowForwardedTraffic": true,
                "allowGatewayTransit": false,
                "useRemoteGateways": false,
                "remoteVirtualNetwork": {
                  "id": "[parameters('idamVnetResourceId')]"
                }
              }
            }
          ]
        }
      }
    }
  ],
  "outputs": {}
}