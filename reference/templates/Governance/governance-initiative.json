{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
         "targetMG": {
            "type": "string"
        },
        "tag1Name": {
            "type": "string",
            "defaultValue": "applicationName"
        },
        "tag1Value": {
            "type": "string",
            "defaultValue": ""
        },
        "tag2Name": {
            "type": "string",
            "defaultValue": "owner"
        },
        "tag2Value": {
            "type": "string",
            "defaultValue": ""
        },
        "tag3Name": {
            "type": "string",
            "defaultValue": "criticality"
        },
        "tag3Value": {
            "type": "string",
            "defaultValue": ""
        },
        "tag4Name": {
            "type": "string",
            "defaultValue": "contactEmail"
        },
        "tag4Value": {
            "type": "string",
            "defaultValue": ""
        },
        "tag5Name": {
            "type": "string",
            "defaultValue": "costCenter"
        },
        "tag5Value": {
            "type": "string",
            "defaultValue": ""
        },
        "tag6Name": {
            "type": "string",
            "defaultValue": "dataClassification"
        },
        "tag6Value": {
            "type": "string",
            "defaultValue": ""
        }
    },
    "variables": {
        "scope": {
            "managementGroup": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('targetMG'))]"
        },
        "policies": {
            "policyDefinitions": {
                "allowedAzRegions": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
                "allowedAzRegionsRg": "/providers/Microsoft.Authorization/policyDefinitions/e765b5de-1225-4ba3-bd56-1ac6695af988",
                "inheritTag": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
                "addTag": "/providers/Microsoft.Authorization/policyDefinitions/726aca4c-86e9-4b04-b0c5-073027359532",
                "auditManagedDisk": "/providers/Microsoft.Authorization/policyDefinitions/06a78e20-9358-41c9-923c-fb736d382a4d",
                "auditResourceLocationRg": "/providers/Microsoft.Authorization/policyDefinitions/0a914e76-4921-4c19-b460-a2d36003525a",
                "appendAzHub": "[concat('/providers/Microsoft.Management/managementGroups/', parameters('targetMG'), '/providers/Microsoft.Authorization/policyDefinitions/append-az-hub')]"
            }
        },
        "initiatives": {
            "policySetDefinitions": {
                "name": "governance-initiative",
                "displayName": "Governance Initiative"
            }
        },
        "policyAssignment": {
            "name": "governance-initiative",
            "displayName": "governance-initiative"
        },
        "apiVersions": {
            "policySetDefinitions": "2018-05-01",
            "policyAssignments": "2020-03-01"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "name": "[variables('initiatives').policySetDefinitions.name]",
            "apiVersion": "[variables('apiVersions').policySetDefinitions]",
            "properties": {
                "displayName": "[variables('initiatives').policySetDefinitions.displayName]",
                "description": "This Azure Governance initiative enforces resource group tagging, tag inheritence, allowed locations and other governance controls across the environment.",
                "metadata": {
                    "version": "1.0.0",
                    "category": "Governance"
                },
                "parameters": {},
                "policyDefinitions": [
  {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag1Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag2Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag3Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag4Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag5Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.addTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6Name')]"
                            },
                            "tagValue": {
                                "value": "[parameters('tag6Value')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6Name')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.auditManagedDisk]",
                        "parameters": {
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.auditResourceLocationRg]",
                        "parameters": {
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.appendAzHub]",
                        "parameters": {
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.allowedAzRegions]",
                        "parameters": {
                            "listOfAllowedLocations": {
                                "value": [
                                    "australiaeast",
                                    "australiasoutheast"
                                ]
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policies').policyDefinitions.allowedAzRegionsRg]",
                        "parameters": {
                            "listOfAllowedLocations": {
                                "value": [
                                    "australiaeast",
                                    "australiasoutheast"
                                ]
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignment').name]",
            "dependsOn": [ "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('initiatives').policySetDefinitions.name)]" ],
            "location": "[deployment().location]",
            "properties": {
                "description": "This Governance initiative enforces resource group tagging, tag inheritence, allowed locations and other governance controls across the environment.",
                "displayName": "[variables('policyAssignment').displayName]",
                "policyDefinitionId": "[extensionResourceId(variables('scope').managementGroup, 'Microsoft.Authorization/policySetDefinitions', variables('initiatives').policySetDefinitions.name)]",
                "notScopes": []
            },
            "identity": {
                "type": "SystemAssigned"
            }
        }
    ],
    "outputs": {
        "policyId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('initiatives').policySetDefinitions.Name)]"
        }
    }
}
