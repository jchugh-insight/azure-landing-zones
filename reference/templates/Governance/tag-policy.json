{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "targetMG": {
            "type": "string"
        },
        "tag1": {
            "type": "string",
            "defaultValue": "Application Name"
        },
        "tag2": {
            "type": "string",
            "defaultValue": "Application Owner"
        },
        "tag3": {
            "type": "string",
            "defaultValue": "Criticality"
        },
        "tag4": {
            "type": "string",
            "defaultValue": "Contact Email"
        },
        "tag5": {
            "type": "string",
            "defaultValue": "Cost Center"
        },
        "tag6": {
            "type": "string",
            "defaultValue": "Data Classification"
        }
    },
    "variables": {
        "policyDefinitions": {
            "allowedAzRegions": "/providers/Microsoft.Authorization/policyDefinitions/e56962a6-4747-49cd-b67b-bf8b01975c4c",
            "allowedAzRegionsRg": "/providers/Microsoft.Authorization/policyDefinitions/e765b5de-1225-4ba3-bd56-1ac6695af988",
            "inheritTag": "/providers/Microsoft.Authorization/policyDefinitions/cd3aa116-8754-49c9-a813-ad46512ece54",
            "requireTag": "/providers/Microsoft.Authorization/policyDefinitions/96670d01-0a4d-4649-9c89-2d3abc0a5025"
        },
        "policyAssignmentName": {
            "azureGovernanceInitiative": "[concat('Required-Tags-', parameters('targetMG'))]",
            "allowedAzRegions": "Allowed-AzRegions",
            "allowedAzRegionsRg": "Allowed-AzRegions-RG"
        },
        "scope": {
            "managementGroup": "[tenantResourceId('Microsoft.Management/managementGroups', parameters('targetMG'))]"
        },
        "policySetName": "Azure-Governance-Initiative",
        "apiVersions": {
            "policySetDefinitions": "2018-05-01",
            "policyAssignments": "2020-03-01"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Authorization/policySetDefinitions",
            "name": "[variables('policySetName')]",
            "apiVersion": "[variables('apiVersions').policySetDefinitions]",
            "properties": {
                "displayName": "[variables('policySetName')]",
                "description": "This initiative enforces resource group tagging, tag inheritence, allowed locations and Azure hybrid use benefits.",
                "metadata": {
                    "category": "Governance"
                },
                "parameters": {},
                "policyDefinitions": [
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag1')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag2')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag3')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag4')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag5')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').requireTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    },
                    {
                        "policyDefinitionId": "[variables('policyDefinitions').inheritTag]",
                        "parameters": {
                            "tagName": {
                                "value": "[parameters('tag6')]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignmentName').azureGovernanceInitiative]",
            "dependsOn": [ "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]" ],
            "location": "[deployment().location]",
            "properties": {
                "description": "[variables('policyAssignmentName').azureGovernanceInitiative]",
                "displayName": "[variables('policyAssignmentName').azureGovernanceInitiative]",
                "policyDefinitionId": "[extensionResourceId(variables('scope').managementGroup, 'Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]",
                "notScopes": []
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        // Conditional assignment of Azure Policy to enforce Azure regions for resources
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignmentName').allowedAzRegions]",
            "location": "[deployment().location]",
            "properties": {
                "description": "[variables('policyAssignmentName').allowedAzRegions]",
                "displayName": "[variables('policyAssignmentName').allowedAzRegions]",
                "policyDefinitionId": "[variables('policyDefinitions').allowedAzRegions]",
                "parameters": {
                    "listOfAllowedLocations": {
                        "value": [
                            "australiaeast",
                            "australiasoutheast"
                        ]
                    }
                },
                "scope": "[variables('scope').managementGroup]"
            }
        },
        // Conditional assignment of Azure Policy to enforce Azure regions for resource groups
        {
            "type": "Microsoft.Authorization/policyAssignments",
            "apiVersion": "[variables('apiVersions').policyAssignments]",
            "name": "[variables('policyAssignmentName').allowedAzRegionsRg]",
            "location": "[deployment().location]",
            "properties": {
                "description": "[variables('policyAssignmentName').allowedAzRegionsRg]",
                "displayName": "[variables('policyAssignmentName').allowedAzRegionsRg]",
                "policyDefinitionId": "[variables('policyDefinitions').allowedAzRegionsRg]",
                "parameters": {
                    "listOfAllowedLocations": {
                        "value": [
                            "australiaeast",
                            "australiasoutheast"
                        ]
                    }
                },
                "scope": "[variables('scope').managementGroup]"
            }
        }
    ],
    "outputs": {
        "policyId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Authorization/policySetDefinitions', variables('policySetName'))]"
        }
    }
} 